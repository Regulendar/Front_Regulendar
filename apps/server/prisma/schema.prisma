generator client {
  provider = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum OrganizationRole {
  OWNER
  ADMIN
  MEMBER
}

enum EventRole {
  HOST
  PARTICIPANT
}


model User {
  id       String @id @db.Uuid @default(uuid())
  name     String
  profileImage String?
  eventParticipations EventParticipation[]
  organizationMembers OrganizationMember[]
}

model Event {
  eventId String @id @default(cuid()) 
  eventTitle String
  eventStartAt DateTime
  eventDateYear Int
  eventDateMonth Int
  eventDateDay Int
  eventDuration Int
  eventParticipations EventParticipation[]
  hostOrganization Organization @relation(fields: [hostOrganizationId], references: [organizationId], onDelete: Cascade)
  hostOrganizationId String
}

model Organization {
  organizationId String @id @default(uuid())
  organizationName String
  organizationDescription String?
  events Event[]
  organizationMembers OrganizationMember[]
}

model OrganizationMember {
  @@id([organizationId, userId])
  userId String
  user User @relation(fields: [userId], references: [id])
  organizationId String
  organization Organization @relation(fields: [organizationId], references: [organizationId], onDelete: Cascade)
  role OrganizationRole @default(MEMBER)
}

model EventParticipation {
  @@id([eventId, userId])
  eventId String
  event Event @relation(fields: [eventId], references: [eventId], onDelete: Cascade)
  userId String
  user User @relation(fields: [userId], references: [id])
  role EventRole @default(PARTICIPANT)
}